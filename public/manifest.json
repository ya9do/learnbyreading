{
    "name": "Learn by Reading",
    "version": "0.1",
    "description": "take a memo easily, and learn it by highlighting the words on current page",
    "permissions": [
        "contextMenus",
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [ "js/dexie.min.js", "js/db.js", "js/background.js" ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [ 
                "http://*/*",
                "https://*/*"
            ],
            "css":["css/contents.css"],
            "js": [ "js/dexie.min.js", "js/db.js", "js/mark.min.js","js/contentscript.js" ],
            "run_at": "document_idle"
        }
    ],
    "browser_action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png"
        },
        "default_title": "Learn by Reading",
        "default_popup":"popup.html"

    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png"
    },
    "manifest_version": 2
}